<% include partials/header %>

<div class = "ui main text container segment">
	<div class = "ui huge header">Edit <%= blog.title %></div>
	<form class = "ui form" action = "/blogs/<%= blog._id %>?_method=PUT" method = "POST">
		<div class="field">
			<label>Title</label>
			<input type = "text" name = "blog[title]" value="<%= blog.title %>" required>
		</div>
		
		<div class="field">
			<label>Image URL</label>
			<input type = "text" name = "blog[imageurl]" value="<%= blog.imageurl %>" required>
		</div>

		<div class="field">
			<label>Content</label>
			<textarea name="blog[body]" required><%= blog.body %></textarea>
		</div>

		<div class="field">
			<button class="ui blue big basic button">Submit</button>
		</div>
	</form>
</div>

<% include partials/footer %>

